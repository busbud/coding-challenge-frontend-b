{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["prettier", "jest"],
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "globals": {
    "React": "writable"
  },
  "rules": {
    "prettier/prettier": "error",
    "react/react-in-jsx-scope": "off",
    "react/jsx-no-undef": [2, { "allowGlobals": true }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
