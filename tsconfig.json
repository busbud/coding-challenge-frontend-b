{
    "compilerOptions": {
        "outDir": "./dist/",
        "lib": ["es5", "es6", "dom"],  
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "experimentalDecorators": true,
        "target": "es5",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ]
}