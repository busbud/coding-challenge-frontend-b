{{#each results}}
<div class="result">
    <div class="result__departure dg-50 tg-100 mg-100">
        <div class="departure">
            <span class="departure__time">{{toTime departure_time}}</span>
            <div class="departure__location">
                <span class="departure__terminal">{{OriginLocation.name}}</span>
                <span class="departure__city">{{OriginLocation.City.name}}</span>
            </div>
        </div>
        <div class="departure">
            <span class="departure__time">{{toTime arrival_time}}</span>
            <div class="departure__location">
                <span class="departure__terminal">{{DestinationLocation.name}}</span>
                <span class="departure__city">{{DestinationLocation.City.name}}</span>
            </div>
        </div>
    </div>

    <div class="result__carrier dg-25 tg-50 mg-50">
        <div class="carrier">
            <div class="carrier__logo">
                <img src="{{Operator.logo_url}}" alt="{{Operator.name}}" />
            </div>
            <div class="carrier__coach">{{class}}</div>
        </div>

    </div>

    <div class="result__cost dg-25 tg-50 mg-50">
        <div class="cost">
            <span class="cost__amount">{{{toCurrency total_price}}}</span>
        </div>
    </div>

    <div class="grid-parent dg-100 tg-100 mg-100">
        <div class="result__rating dg-15 tg-20 mg-50">
            <svg viewBox="0 0 40 40">
                <path d="M38.8820984,17.3021432 L22.697399,1.11744379 C21.2068636,-0.373091577 18.7922207,-0.371870827 17.3029061,1.11744379 L1.11698597,17.3021432 C-0.372328655,18.7926786 -0.372328655,21.2073214 1.11698597,22.6978568 L17.3029061,38.8825562 C18.7922207,40.3718708 21.2068636,40.3730916 22.697399,38.8825562 L38.8820984,22.6978568 C40.371413,21.2085422 40.371413,18.7914578 38.8820984,17.3021432 L38.8820984,17.3021432 Z M20.0007629,27.4343656 C14.957846,27.4343656 10.870776,23.5658098 10.4874606,18.6693828 L11.9621262,18.6693828 C12.3405586,22.7576735 15.772086,25.9731282 20.0007629,25.9731282 C24.2269983,25.9731282 27.6585257,22.7576735 28.0369581,18.6693828 L29.5116238,18.6693828 C29.1295291,23.5658098 25.0412384,27.4343656 20.0007629,27.4343656 L20.0007629,27.4343656 Z" fill="#4E8314"/>
            </svg>
        </div>
        <div class="result__amenities dg-60 tg-55 hide-on-mobile">
        </div>
        <div class="result__select dg-25 tg-25 mg-50">
            <button data-action="select-ticket">{{i18n "select"}}</button>
        </div>
    </div>
</div>
{{/each}}