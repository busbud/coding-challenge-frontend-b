{
  "name": "busbud-test",
  "description": "A microsite that lists bus travel schedules for a given route and a given date",
  "version": "0.1.0",
  "author": "ClÃ©ment Guillou <cguillou@wanderbrief.com>",
  "private": false,
  "scripts": {
    "css": "sass-lint ./src/assets/css/**/*.scss -v | node-sass ./src/assets/css/app.scss --output ./public/dist/assets/css --output-style compressed",
    "images": "imagemin ./src/assets/images/**/* --out-dir=./public/dist/assets/images",
    "svg": "svg-sprite-generate -d ./src/assets/icons -o ./public/dist/assets/icons/icons.svg",
    "watch": "chokidar ./src/assets/css/**/*.scss -c 'npm run css' & chokidar ./src/assets/images/**/* -c 'npm run images' & chokidar ./src/assets/icons/* -c 'npm run svg'",
    "deploy": "npm run css && npm run images && npm run svg",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --inline --hot",
    "build": "mkdir -p ./public/dist/assets/icons && cp -R ./src/assets/images/ ./public/dist/assets/images && npm run css && npm run svg && cross-env NODE_ENV=production webpack --progress --hide-modules --display-error-details",
    "postinstall": "npm run build",
    "start": "node server.js"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "bluebird": "^3.5.0",
    "express": "^4.16.2",
    "flatpickr": "^4.0.6",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "vee-validate": "^2.0.0-beta.21",
    "vue": "^2.1.0",
    "vue-loader": "^10.0.0",
    "vue-lodash": "^1.0.4",
    "vue-router": "^2.2.0",
    "vue-style-loader": "^1.0.0",
    "vue-template-compiler": "^2.1.0",
    "vuex": "^2.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.0",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.5.0",
    "npm-tasks": "^1.4.4",
    "pug": "^2.0.0-beta10",
    "sass-lint": "^1.10.2",
    "sass-loader": "^4.1.1",
    "svg-sprite-generator": "0.0.7",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  }
}
