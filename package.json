{
  "name": "webpack-starter",
  "version": "1.0.0",
  "description": "Bare bones webpack project with a node express server",
  "main": "server/index.js",
  "scripts": {
    "dev-server": "nodemon server/index.js --watch server",
    "dev-web": "webpack-dev-server --config ./webpack-dev.config.js --hot --progress --colors --content-base build", 
    "dev": "nodemon server/index.js --watch server & webpack-dev-server --config ./webpack-dev.config.js --hot --progress --colors --content-base build",
    "build": "rm build/*; webpack --config ./webpack-prod.config.js --progress --colors",
    "start": "node server/index.js",
    "test": "karma start",
    "testing": "karma start --single-run=false"
  },
  "repository": "git@github.com:cgreening/webpack-starter.git",
  "author": "Chris Greening",
  "license": "BSD",
  "dependencies": {
    "compression": "^1.5.0",
    "cors": "^2.7.1",
    "express": "^4.12.4"
  },
  "devDependencies": {
    "autoprefixer-loader": "^2.0.0",
    "babel-core": "^5.5.8",
    "babel-loader": "^5.1.4",
    "babel-runtime": "^5.5.8",
    "css-loader": "^0.14.5",
    "expect": "^1.6.0",
    "file-loader": "^0.8.4",
    "html-webpack-plugin": "^1.5.2",
    "image-webpack-loader": "^1.6.1",
    "karma": "^0.12.36",
    "karma-chrome-launcher": "^0.1.12",
    "karma-cli": "0.0.4",
    "karma-mocha": "^0.1.10",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.5.1",
    "mocha": "^2.2.5",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.2.0",
    "nodemon": "^1.3.7",
    "react": "^0.13.3",
    "react-favicon": "0.0.3",
    "react-hot-loader": "^1.2.7",
    "sass-loader": "^1.0.2",
    "sinon": "^1.15.3",
    "style-loader": "^0.12.3",
    "webpack": "^1.9.11",
    "webpack-dev-server": "^1.9.0"
  }
}
