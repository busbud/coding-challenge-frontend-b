{
  "name": "busbud-osheaga",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write **/*.{ts,tsx}",
    "formatStyles": "stylelint '**/*.pcss' --syntax scss --fix",
    "lint:pcss": "stylelint '**/*.pcss' --syntax scss",
    "lint:ts": "eslint . --ext .ts,.tsx",
    "start": "next start",
    "test": "jest --runInBand"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "yarn run lint:ts",
      "yarn format"
    ],
    "**/*.pcss": [
      "yarn run lint:pcss"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@mdi/js": "^5.8.55",
    "@svgr/webpack": "^5.4.0",
    "acta": "^3.0.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "next": "10.0.1",
    "pcss-loader": "^1.0.0",
    "prettier": "^2.1.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-styles-injector": "^1.1.5",
    "sass": "^1.29.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.56",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "jest-watch-typeahead": "^0.6.1",
    "typescript": "^4.0.5"
  }
}
