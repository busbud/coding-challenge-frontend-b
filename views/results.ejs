<div class="row">
  <div class="col-12">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-sm">
        <thead>
          <tr>
            <th><%= translation.DEPARTURELOCATION %></th>
            <th><%= translation.DEPARTURETIME %></th>
            <th><%= translation.ARRIVALLOCATION %></th>
            <th><%= translation.ARRIVALTIME %></th>
            <th><%= translation.PRICE %></th>
          </tr>
        </thead>
      <tbody>
      <% data.forEach(departure => { %>
        <tr>
          <td><%= departure.originLocationName %></td>
          <td><%= departure.departTime %></td>
          <td><%= departure.destinationLocationName %></td>
          <td><%= departure.arriveTime %></td>
          <td><%= departure.price %></td>
        </tr>
      <% }) %>
      </tbody>
    </div>
  </div>
</div>
