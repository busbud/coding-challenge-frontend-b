<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= current_page.data.title || "Middleman" %></title>

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <%= stylesheet_link_tag "vendors/bootstrap", "site" %>
  </head>

  <body class="main-image">
      <div class="container-fluid">
        <div class="row">
          <nav class="navbar nav-custom navbar-inverse">
            <div class="container-fluid">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <img alt="Brand" src="images/osheaga-logo.png" class="logo">
              </div>
            </div><!-- /.container-fluid -->
          </nav>
        </div>
      </div>

    <%= yield %>

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p class="footer-section">Powered by Busbud</p>
        </div>
      </div>
    </div>

    <%= javascript_include_tag "vendors/jquery", "vendors/bootstrap", "site" %>
  </body>
</html>
